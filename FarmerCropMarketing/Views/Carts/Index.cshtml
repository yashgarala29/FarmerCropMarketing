@model IEnumerable<FarmerCropMarketing.Models.Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Farmers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crops)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Farmers.Farmers_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crops.Crops_description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cart_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cart_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cart_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
