@model FarmerCropMarketing.Models.Crops

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var crop_image_path = "/CropImage/" + Model.Crops_image;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Crops</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crops_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crops_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crops_quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crops_quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crops_price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crops_price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crops_description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crops_description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crops_image)
        </dt>
        <dd class="col-sm-10">
            <img class="img-thumbnail" src="@crop_image_path" alt="Card image cap">
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Crops_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="CropList" asp-controller="Admin" class="btn btn-success">All Crop</a>
    </form>
   <br> 
</div>
