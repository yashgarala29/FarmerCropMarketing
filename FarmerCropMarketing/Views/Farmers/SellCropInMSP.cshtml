@model FarmerCropMarketing.Models.Class.MSPSellCrops
@{
    ViewData["Title"] = "Sell Item In Msp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="SellCropInMSP" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Farmers_id" />
            <input type="hidden" asp-for="MSPCrops_id" />
            <div class="form-group">
                <label asp-for="Crops_quantity" class="control-label"></label>
                <input asp-for="Crops_quantity" class="form-control" />
                <span asp-validation-for="Crops_quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Farmers.Farmers_address" class="control-label"></label>
                <input asp-for="Farmers.Farmers_address" class="form-control" />
                <span asp-validation-for="Farmers.Farmers_address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MSPCropsDetail.Crops_name" class="control-label"></label>
                <input asp-for="MSPCropsDetail.Crops_name" class="form-control" disabled />
                <span asp-validation-for="MSPCropsDetail.Crops_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MSPCropsDetail.Crops_price" class="control-label"></label>
                <input asp-for="MSPCropsDetail.Crops_price" class="form-control" disabled />
                <span asp-validation-for="MSPCropsDetail.Crops_price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MSPCropsDetail.Crops_description" class="control-label"></label>
                <input asp-for="MSPCropsDetail.Crops_description" class="form-control" disabled />
                <span asp-validation-for="MSPCropsDetail.Crops_description" class="text-danger"></span>
            </div>

            @{
                var imagepath = "../../CropImage/" + (Model.MSPCropsDetail.Crops_image);
            }
            <div class="form-group row col-4 offset-4">
                <img src="@imagepath" class="img-thumbnail">
            </div>
            @*@imagepath*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(filename);
            });

        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}