@model FarmerCropMarketing.Models.viewmodel.editmspcrop

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var imagepath = "../CropImage/" + (Model.ExistringImagePath);
}

<h1>Edit</h1>

<h4>MSPCropsDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MSPCrops_id" />
            <input type="hidden" asp-for="ExistringImagePath" />

            <div class="form-group">
                <label asp-for="Crops_name" class="control-label"></label>
                <input asp-for="Crops_name" class="form-control" />
                <span asp-validation-for="Crops_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crops_price" class="control-label"></label>
                <input asp-for="Crops_price" class="form-control" />
                <span asp-validation-for="Crops_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crops_description" class="control-label"></label>
                <textarea asp-for="Crops_description" class="form-control"></textarea>
                <span asp-validation-for="Crops_description" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Crops_image" class="control-label"></label>
                <div class="custom-file">
                    <input value="-1" asp-for="Crops_image" class="form-control custom-file-input" />
                    <label class="custom-file-label">Product image</label>
                </div>
                <span asp-validation-for="Crops_image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crop_Buying_Staring_Date" class="control-label"></label>
                <input asp-for="Crop_Buying_Staring_Date" class="form-control" />
                <span asp-validation-for="Crop_Buying_Staring_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crop_Buying_End_Date" class="control-label"></label>
                <input asp-for="Crop_Buying_End_Date" class="form-control" />
                <span asp-validation-for="Crop_Buying_End_Date" class="text-danger"></span>
            </div>
            @{
                var imagepath = "../../CropImage/" + (Model.ExistringImagePath);
            }
            <div class="form-group row col-4 offset-4">
                <img src="@imagepath" class="img-thumbnail">
            </div>
            @*@imagepath*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(filename);
            });

        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}